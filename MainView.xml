<?xml version="1.0"?>
<view icon="4987" title="TreeStats" width="360" height="270">
  <control progid="DecalControls.FixedLayout" clipped="">
    <control progid="DecalControls.Notebook" name="nbkNotebook" left="0" top="0" width="360" height="270">
      <page label="Update">
        <control progid="DecalControls.FixedLayout" clipped="">
          <control progid="DecalControls.CheckBox" name="chkAutoMode" left="10" top="10" width="180" height="25" text="Auto. Send All Characters" checked="false"/>
          <control progid="DecalControls.PushButton" name="btnSendUpdate" left="10" top="30" width="160" height="25" text="Manually Send Character" />
          <control progid="DecalControls.StaticText" name="txtWhitelist" left="10" top="70" width="180" height="25" text="Whitelist (Always Send):" />
          <control progid="DecalControls.PushButton" name="btnAddCharacter" left="10" top="90" width="120" height="25" text="Add Character" />
          <control progid="DecalControls.PushButton" name="btnRemoveCharacter" left="10" top="120" width="120" height="25" text="Remove Character" />
		  <control progid="DecalControls.CheckBox" name="chkSilent" left="10" top="170" width="220" height="25" text="Silence Plugin Messages in Chat" checked="false"/>
	    </control>
      </page>
      <page label="Account">
        <control progid="DecalControls.FixedLayout" clipped="">
          <control progid="DecalControls.StaticText" name="txtAccountInfo" left="10" top="10" width="340" height="100" text ="Create a TreeStats account and characters you upload will be linked by your Display Name on the website. Characters you've previously uploaded won't be linked until you log in and upload again. If you check Use TreeStats Account, you will be automatically logged in in the future."/>
          <control progid="DecalControls.CheckBox" name="chkUseAccount" left="10" top="110" width="180" height="20" text="Use TreeStats Account" checked="false"/>
          <control progid="DecalControls.StaticText" name="txtAccountName" left="10" top="130" width="160" height="20" text="Display Name (a-z,A-Z,-,'):" />
          <control progid="DecalControls.StaticText" name="txtAccountPassword" left="190" top="130" width="160" height="20" text="Password:" />
          <control progid="DecalControls.Edit" name="edtAccountName" left="10" top="150" width="160" height="20" text=""/>
          <control progid="DecalControls.Edit" name="edtAccountPassword" left="190" top="150" width="160" height="20" text ="" />
          <control progid="DecalControls.PushButton" name="btnAccountCreate" left="10" top="190" width="100" height="25" text="Create Account" />
          <control progid="DecalControls.PushButton" name="btnAccountLogin" left="130" top="190" width="50" height="25" text="Login" />
        </control>
      </page>
      <page label="Settings">
        <control progid="DecalControls.FixedLayout" clipped="">
          <control progid="DecalControls.StaticText" name="txtAccountInfo" left="10" top="10" width="340" height="100" text ="Use a custom TreeStats server URL if you are running your own instance of TreeStats and don't want to upload to treestats.net."/>
          <control progid="DecalControls.CheckBox" name="chkUseCustomURL" left="10" top="60" width="200" height="20" text="Use Custom TreeStats Server" checked="false"/>
          <control progid="DecalControls.StaticText" name="txtCustomURL" left="10" top="80" width="300" height="20" text="Custom Server URL:" />
          <control progid="DecalControls.Edit" name="edtCustomURL" left="10" top="100" width="340" height="20" text ="" />
        </control>
      </page>
    </control>
  </control>
